<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Descrption</th>
      <th>Point</th>
      <th>Iduser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image_tag image.image.url(:thumb) %></td>
        <td><%= image.descrption %></td>
        <td><%= image.point %></td>
        <td><%= image.user_id %></td>




         <% if user_signed_in? %>


        <td><%= link_to 'Show', image %></td>


          <% if can? :update, image %>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <% end %>

        <% if can? :destroy, image %>  
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>

        <% else %>

        <% end %>



      </tr>
    <% end %>
  </tbody>
</table>




